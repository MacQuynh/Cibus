<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.fragments.UserRecipesList.UserRecipesListFragment">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rcvUserRecipes"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/txtHeaderUserRecipes"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginRight="16dp"
        tools:listitem="@layout/user_recipes_list_fragment_item" />

    <TextView
        android:id="@+id/txtHeaderUserRecipes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="24dp"
        android:text="@string/user_list_header"
        android:textSize="24sp"
        android:textStyle="bold"
        tools:text="@string/user_list_header" />

</RelativeLayout>